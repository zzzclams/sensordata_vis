<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/drawerLayout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_Temp_out"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="CO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_CO2_out"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="CO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_CO_out"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="PM2.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_PM_out"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="NO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_NO2"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

            <TextView
                android:padding="3dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="SO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Data_of_SO2"
                android:layout_width="match_parent"
                android:layout_height="300dp"  />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header_navigator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
